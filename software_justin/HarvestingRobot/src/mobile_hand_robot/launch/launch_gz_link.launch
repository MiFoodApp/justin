<launch>

  <!-- By default, we are not in debug mode -->
  <arg name="debug" default="false" />
  <arg name="use_rviz" default="false" />
  <rosparam command="load" file="$(find mobile_hand_robot)/config/joint_names.yaml"/>

  <include file="$(find mobile_hand_robot)/launch/planning_context.launch" >
    <arg name="load_robot_description" value="false" />
  </include>

  <include file="$(find mobile_hand_robot)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  <group if="$(arg use_rviz)" >
    <include file="$(find mobile_hand_robot)/launch/moveit_rviz.launch">
      <arg name="rviz_config" value="$(dirname)/moveit.rviz"/>
      <arg name="debug" value="$(arg debug)"/>
    </include>
  </group>

</launch>